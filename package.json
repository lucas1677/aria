{
  "name": "arias-education-platform-fe",
  "author": "lucas shao",
  "version": "0.0.1",
  "private": true,
  "description": "front end support for arias-education-platform",
  "license": "MIT",
  "main": "dist/bundle.js",
  "repository": {
    "type": "git",
    "url": "git@gitee.com:arias-education/haitang-edu-platform-fe.git"
  },
  "scripts": {
    "start": "yarn dev",
    "dev": "webpack-dashboard -m -- webpack-dev-server --port 3168 --open --debug --devtool cheap-module-source-map --output-pathinfo --history-api-fallback --hot --inline --progress --colors",
    "build": "webpack -p --progress --colors",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
